<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="mvs_sample_homepage" pattern="/">
        <default key="_controller">MvsSampleBundle:Default:index</default>
    </route>

    <route id="mvs_sample_create" pattern="/create">
        <default key="_controller">MvsSampleBundle:Default:create</default>
    </route>

    <route id="mvs_sample_show" pattern="/show/{id}">
        <default key="_controller">MvsSampleBundle:Default:show</default>
    </route>
</routes>
